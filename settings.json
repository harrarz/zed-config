{
  "show_edit_predictions": false,
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "icon_theme": "Material Icon Theme",
  "git_panel": {
    "dock": "right"
  },
  "agent": {
    "model_parameters": [],
    "dock": "left",
    "version": "2",
    "button": false
  },
  "terminal": {
    "button": false,
    "font_size": 14.0
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    },
    "git_gutter": "hide",
    "hunk_style": "unstaged_hollow"
  },
  "linked_edits": true,
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "indent_guides": {
    "enabled": false,
    "line_width": 0,
    "active_line_width": 0,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "preferred_line_length": 120,
  "base_keymap": "VSCode",
  "preview_tabs": {
    "enabled": false
  },
  "multi_cursor_modifier": "cmd_or_ctrl",
  "gutter": {
    "line_numbers": true
  },
  "hover_popover_delay": 1500,
  "hover_popover_enabled": true,
  "selection_highlight": false,
  "cursor_blink": false,
  "current_line_highlight": "none",
  "file_types": {
    "Ruby": ["Jenkinsfile"]
  },
  "telemetry": {
    "metrics": false
  },
  "theme": "macOS Classic Light",
  "ui_font_size": 14,
  "buffer_font_size": 14.0,
  //"buffer_font_family": "Geist Mono",
  "tab_size": 2,
  "show_whitespaces": "selection",
  "soft_wrap": "prefer_line",
  "tabs": {
    "git_status": true,
    "file_icons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "tab_bar": {
    "show_tab_bar_buttons": false
  },
  "project_panel": {
    "button": false,
    "show_diagnostics": "all",
    "default_width": 240,
    "dock": "right",
    "indent_size": 10
  },
  "minimap": {
    "show": "never"
  },
  "search": {
    "button": false
  },
  "format_on_save": "on",
  "scrollbar": {
    "show": "never"
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.project",
    "**/.factorypath"
  ],
  "language_overrides": {
    "JSON": {
      "format_on_save": "off"
    },
    "TypeScript": {
      "format_on_save": "off"
    },
    "JavaScript": {
      "format_on_save": "off"
    },
    "TSX": {
      "format_on_save": "off"
    },
    "HTML": {
      "format_on_save": "on"
    },
    "CSS": {
      "format_on_save": "on"
    },
    "Markdown": {
      "show_whitespaces": "all"
    },
    "YAML": {
      "show_whitespaces": "all"
    },
    "Python": {
      "show_whitespaces": "all"
    }
  }
}
